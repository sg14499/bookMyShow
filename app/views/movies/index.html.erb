<h1 style = "text-align:center; font-size: 80px">Movies</h1>

<%= link_to "Home", root_path %>

<ul>
  <% @movies.each do |movies| %>
	<div class="row">
		<div class="column">
			<% if movies.name == "Satyameva Jayate 2" %>
					<%= image_tag("SM-2.jpg", size: "370x500", :alt => "rss feed") %>
			<% end %>
		</div>

		<div class="column">
			<% if movies.name == "Sooryavanshi" %>
					<%= image_tag("sooryavanshi.jpg", size: "370x500", :alt => "rss feed") %>
			<% end %>
		</div>

		<div class="column">
			<% if movies.name == "Antim:the final truth" %>
					<%= image_tag("Antim.jpg", size: "370x500", :alt => "rss feed") %>
			<% end %>
		</div>

		<div class="column">
			<% if movies.name == "Bunty Aur Babli 2" %>
					<%= image_tag("Bab.jpg", size: "370x500", :alt => "rss feed") %>
			<% end %>
		</div>

		<p><%= link_to movies.name, movies %></p>
	</div>

  <% end %>
</ul>


